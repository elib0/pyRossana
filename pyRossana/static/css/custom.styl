@import 'jeet/index'

edit();

/*General*/
input[type=search]
	width: 30em
	text-align: right

/*Barra principal*/
body > header
	position: absolute
	top 0
	left 0
	padding: 0 1em
	height 40px
	width 100%
	> div
		height inherit
	> div.profile-nav
		col(1/4 1.5/2.5 7/8)
	> div.link-nav
		col(1/2 1.5/2.5 7/8, offset: 1/4)
		text-align: right


/*Areas Comunes*/
section
	width 100%
	height 100%
	padding-top: 40px
	overflow hidden

.page-wrapper
	center(1080px)

ul.horizontal-menu
	list-style none
	li
		float left


/*Secciones de la pagina*/
.about-us
	color: #FFF
	font-size 14px
	.content
		h1
			margin-top 1em
			color #FFF
			font-weight: bold
		col(3/4, offset: 1/4)
		article.mision
			text-align: center
		article.view
			text-align: right
	.social
		col(4/8, offset: 4/8)
		text-align: right
	footer
		center(600px)
		text-align: center


.product-list
	form
		text-align: right
		padding: 0.8em
	aside
		span(1/3)
		h2
			text-decoration: underline
	.products
		span(2/3)
		article
			span(1/3 2/3)
			header
				h1
					font-size: 13px
					margin 0
			col(1/3, cycle:3)
			background-color: #FFF
			min-height: 354px
			header h1
				text-align: center
	.page-wrapper > footer
		col(4/8, offset: 4/8)
		text-align: right

.register-promoter
	form
		input, select
			margin-right: 20px
	.personal-info, .aditional-info, .photos
		center(800px)
		background-color: #FFF
		margin-top: 1em
		text-align: center
		ul.horizontal-menu li
			col(1/2)
			min-height: 100px



